@page
@using Hotel.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Hotel.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.Id" />
            <div class="form-group">
                <label asp-for="Booking.GuestId" class="control-label"></label>
                <select asp-for="Booking.GuestId" class="form-control" asp-items="ViewBag.GuestId"></select>
                <span asp-validation-for="Booking.GuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.RoomId" class="control-label"></label>
                <select asp-for="Booking.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Booking.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckInDate" class="control-label"></label>
                <input asp-for="Booking.CheckInDate" class="form-control" />
                <span asp-validation-for="Booking.CheckInDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckOutDate" class="control-label"></label>
                <input asp-for="Booking.CheckOutDate" class="form-control" />
                <span asp-validation-for="Booking.CheckOutDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.State" class="control-label"></label>
                <select asp-for="Booking.State" class="form-control">
                    @foreach (var state in Enum.GetValues(typeof(BookingState)))
                    {
                        <option value="@state">@state</option>
                    }
                    </select>
                <span asp-validation-for="Booking.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

